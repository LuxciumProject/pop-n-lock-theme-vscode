{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "lib": [
            "es6",
            "dom"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "rootDir": "src",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/TypeScript/terminal-colors.js"
        // "./node_modules/vscode/vscode.d.ts",
        // "./node_modules/vscode/lib/*"
    ]
}
